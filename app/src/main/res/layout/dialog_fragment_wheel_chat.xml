<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:id="@+id/selector_area_bottom"
            android:layout_width="153dp"
            android:layout_height="120dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wheel_ball">

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/wheel_circle"
            android:layout_width="154dp"
            android:layout_height="121dp"
            android:src="@drawable/ic_wheel_chat_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.708" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/wheel_ball"
            android:layout_width="49dp"
            android:layout_height="43dp"
            android:src="@drawable/ic_wheel_chat_ball"
            app:layout_constraintBottom_toBottomOf="@+id/wheel_circle"
            app:layout_constraintEnd_toEndOf="@+id/wheel_circle"
            app:layout_constraintStart_toStartOf="@+id/wheel_circle"
            app:layout_constraintTop_toTopOf="@+id/wheel_circle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/wheel_chat_selector"
            android:layout_width="36dp"
            android:layout_height="48dp"
            android:layout_marginStart="144dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/ic_wheel_chat_selector"
            app:layout_constraintStart_toStartOf="@+id/wheel_circle"
            app:layout_constraintTop_toTopOf="@+id/wheel_circle" />

        <FrameLayout
            android:id="@+id/selector_area_right"
            android:layout_width="166dp"
            android:layout_height="76dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/wheel_ball"
            app:layout_constraintTop_toTopOf="@+id/wheel_circle">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/selector_area_left"
            android:layout_width="168dp"
            android:layout_height="74dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/wheel_ball"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/wheel_circle">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/selector_area_top"
            android:layout_width="153dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/wheel_ball"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>